<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="7"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    android:visibility="visible"
    tools:context=".Calculadora">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        android:background="#f1f8ff"
        android:enabled="false"
        android:gravity="end"
        android:singleLine="true"
        android:text="0"
        android:textAlignment="textEnd"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="14dp"
        android:background="@color/colorPrimary">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp">

            <Button
                android:id="@+id/button7"
                style="@style/EstiloBoton"
                android:text="@string/button7" />

            <Button
                android:id="@+id/button8"
                style="@style/EstiloBoton"
                android:text="@string/button8" />

            <Button
                android:id="@+id/button9"
                style="@style/EstiloBoton"
                android:text="@string/button9" />

            <Button
                android:id="@+id/buttondivide"
                style="@style/EstiloBoton"
                android:text="/" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                style="@style/EstiloBoton"
                android:text="@string/button4" />

            <Button
                android:id="@+id/button5"
                style="@style/EstiloBoton"
                android:text="@string/button5" />

            <Button
                android:id="@+id/button6"
                style="@style/EstiloBoton"
                android:text="@string/button6" />

            <Button
                android:id="@+id/buttonmultiply"
                style="@style/EstiloBoton"
                android:text="X" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button1"
                style="@style/EstiloBoton"
                android:text="@string/button1" />

            <Button
                android:id="@+id/button2"
                style="@style/EstiloBoton"
                android:text="@string/button2" />

            <Button
                android:id="@+id/button3"
                style="@style/EstiloBoton"
                android:text="@string/button3" />

            <Button
                android:id="@+id/buttonsubstract"
                style="@style/EstiloBoton"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttoncomma"
                style="@style/EstiloBoton"
                android:text="." />

            <Button
                android:id="@+id/button0"
                style="@style/EstiloBoton"
                android:text="@string/button0" />

            <Button
                android:id="@+id/buttonpercentage"
                style="@style/EstiloBoton"
                android:text="%" />

            <Button
                android:id="@+id/buttonsum"
                style="@style/EstiloBoton"
                android:text="+" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonequalize"
                style="@style/EstiloBoton"
                android:text="=" />

            <Button
                android:id="@+id/buttonsigno"
                style="@style/EstiloBoton"
                android:background="#30dbc4"
                android:text="+/-" />

            <Button
                android:id="@+id/buttonc"
                style="@style/EstiloBoton"
                android:background="#30dbc4"
                android:text="C" />
        </TableRow>
    </TableLayout>


</RelativeLayout>
